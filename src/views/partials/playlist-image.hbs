<div class="card">
  <div class="card-image">
    <figure class="image is-256x256">
      {{#if playlist.img}}
        <img src={{playlist.img.url}} />
      {{/if}}
    </figure>
  </div>
  <div class="card-content">
    <form action="/playlist/{{playlist._id}}/image" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label">
          <input class="file-input" name="imageFile" type="file" name="resume" accept="image/png, image/jpeg" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
    {{#if playlist.img}}
      <a href="/playlist/{{playlist._id}}/image" class="button">
        <span class="icon is-small">
          <i class="fas fa-trash"></i>
        </span>
      </a>
    {{/if}}
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input"); fileInput.onchange = () => { if (fileInput.files.length > 0) { const fileName = document.querySelector(".file-name");
  fileName.textContext = fileInput.files[0].name; } };
</script>
